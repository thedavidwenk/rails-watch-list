<!-- app/views/shared/_modal.html.erb -->
<div class="modal fade" id="newBookmarkModal" tabindex="-1" aria-labelledby="newListModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New List</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="submitNewListForm()">Add New Bookmark</button>
      </div>
    </div>
  </div>
</div>

<script>
  function submitNewListForm() {
    document.querySelector("#newBookmarkModal form").submit();
  }
</script>